@using MusicOrganizer.Models;

<h1>Disks</h1>

<form action="/disks/search" method="get">
  <label for="searchArtist">Artist name</label>
  <input id="searchArtist" name="searchArtist" type="text">
  <button type="submit">Add</button>
</form>

@if (Model.Count == 0)
{
  <p>There are no items in the list.</p>
}

  @foreach (Disk disk in Model)
  {
    <h3><a href="/disks/@disk.Id">@disk.Name</a></h3>
  }

<p><a href="/">Back home</a></p>